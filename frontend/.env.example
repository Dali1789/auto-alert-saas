# Auto Alert SaaS - Environment Variables Template

# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend-url.railway.app
NEXT_PUBLIC_WS_URL=wss://your-backend-url.railway.app

# Application Configuration
NEXT_PUBLIC_APP_NAME="Auto Alert Pro"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Professional car alert system with Mobile.de integration"

# Authentication
NEXTAUTH_URL=https://your-frontend-url.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret-here

# External Services
NEXT_PUBLIC_RETELL_API_KEY=your-retell-api-key
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE_ALERTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Production
NODE_ENV=production